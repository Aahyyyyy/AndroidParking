<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorGrey"
        tools:context=".home.view.HomeFragment">
    <LinearLayout
            android:id="@+id/home_llHead2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorLightGold"
            android:elevation="5dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="38dp"
                android:orientation="horizontal">
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:minWidth="0dp"
                    android:background="@null"
                    android:text="杭州市"
                    android:textSize="13sp"
                    android:textColor="@color/colorWhite"/>
            <ImageView
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/main_home_icon_more"/>
            <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            <LinearLayout
                    android:layout_width="195dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:background="@drawable/style_btn_search">
                <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="搜索"/>
                <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
            </LinearLayout>
            <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"/>
            <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/main_home_icon_location"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="10dp"
                    android:layout_marginRight="10dp"
                    android:minWidth="0dp"
                    android:background="@null"
                    android:text="地图"
                    android:textSize="13sp"
                    android:textColor="@color/colorWhite"/>
        </LinearLayout>
    </LinearLayout>
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
                android:id="@+id/home_Refresh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.myapplication1.component.MyNestedScrollView
                    android:id="@+id/home_Scroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:id="@+id/home_llHead1"
                            android:layout_width="match_parent"
                            android:layout_height="125dp"
                            android:background="@drawable/style_home_bg">
                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginTop="38dp"
                                android:orientation="horizontal">
                            <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginLeft="10dp"
                                    android:minWidth="0dp"
                                    android:background="@null"
                                    android:text="杭州市"
                                    android:textSize="13sp"
                                    android:textColor="@color/colorWhite"/>
                            <ImageView
                                    android:layout_width="10dp"
                                    android:layout_height="10dp"
                                    android:layout_marginStart="3dp"
                                    android:layout_marginLeft="3dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@mipmap/main_home_icon_more"/>
                            <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"/>
                            <LinearLayout
                                    android:layout_width="195dp"
                                    android:layout_height="28dp"
                                    android:layout_gravity="center_vertical"
                                    android:orientation="horizontal"
                                    android:background="@drawable/style_btn_search">
                                <View
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"/>
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:text="搜索"/>
                                <View
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"/>
                            </LinearLayout>
                            <View
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"/>
                            <ImageView
                                    android:layout_width="18dp"
                                    android:layout_height="18dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@mipmap/main_home_icon_location"/>
                            <Button
                                    android:id="@+id/home_goMap"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="10dp"
                                    android:layout_marginRight="10dp"
                                    android:minWidth="0dp"
                                    android:background="@null"
                                    android:text="地图"
                                    android:textSize="13sp"
                                    android:textColor="@color/colorWhite"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                            android:id="@+id/home_llBody"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="80dp"
                            android:orientation="vertical">
                        <LinearLayout
                                android:id="@+id/home_llIcon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginTop="0dp"
                                android:orientation="vertical"
                                android:background="@drawable/style_home_icon_bg">
                            <LinearLayout
                                    android:id="@+id/home_llIcon1"
                                    android:layout_width="match_parent"
                                    android:layout_height="85dp"
                                    android:paddingTop="5dp"
                                    android:orientation="horizontal">
                                <View
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"/>
                                <LinearLayout
                                        android:id="@+id/home_llCom"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginRight="15dp"
                                        android:orientation="vertical">
                                    <ImageView
                                            android:layout_width="42dp"
                                            android:layout_height="42dp"
                                            android:src="@mipmap/main_home_icon_com"/>
                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:text="全部小区"
                                            android:textSize="10sp"
                                            android:textColor="@color/colorBlack"
                                            tools:ignore="SmallSp"/>
                                </LinearLayout>
                                <LinearLayout
                                        android:id="@+id/home_llCar"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginRight="15dp"
                                        android:layout_marginLeft="15dp"
                                        android:orientation="vertical">
                                    <ImageView
                                            android:layout_width="42dp"
                                            android:layout_height="42dp"
                                            android:src="@mipmap/main_home_icon_car"/>
                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:text="全部车位"
                                            android:textSize="10sp"
                                            android:textColor="@color/colorBlack"
                                            tools:ignore="SmallSp"/>
                                </LinearLayout>
                                <LinearLayout
                                        android:id="@+id/home_llMap"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginRight="15dp"
                                        android:orientation="vertical">
                                    <ImageView
                                            android:layout_width="42dp"
                                            android:layout_height="42dp"
                                            android:src="@mipmap/main_home_icon_map"/>
                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:text="车位地图"
                                            android:textSize="10sp"
                                            android:textColor="@color/colorBlack"
                                            tools:ignore="SmallSp"/>
                                </LinearLayout>
                                <LinearLayout
                                        android:id="@+id/home_llNear"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="15dp"
                                        android:orientation="vertical">
                                    <ImageView
                                            android:layout_width="42dp"
                                            android:layout_height="42dp"
                                            android:src="@mipmap/main_home_icon_near"/>
                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:text="附近车位"
                                            android:textSize="10sp"
                                            android:textColor="@color/colorBlack"
                                            tools:ignore="SmallSp"/>
                                </LinearLayout>
                                <View
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"/>
                            </LinearLayout>
                            <LinearLayout
                                    android:id="@+id/home_llIcon2"
                                    android:layout_width="match_parent"
                                    android:layout_height="80dp"
                                    android:paddingBottom="15dp"
                                    android:orientation="horizontal">
                                <View
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"/>
                                <LinearLayout
                                        android:id="@+id/home_llSign"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginRight="15dp"
                                        android:orientation="vertical">
                                    <ImageView
                                            android:layout_width="42dp"
                                            android:layout_height="42dp"
                                            android:src="@mipmap/main_home_icon_sign"/>
                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:text="每日签到"
                                            android:textSize="10sp"
                                            android:textColor="@color/colorBlack"
                                            tools:ignore="SmallSp"/>
                                </LinearLayout>
                                <LinearLayout
                                        android:id="@+id/home_llActivity"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginRight="15dp"
                                        android:orientation="vertical">
                                    <ImageView
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:src="@mipmap/main_home_icon_activity"/>
                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:text="精彩活动"
                                            android:textSize="10sp"
                                            android:textColor="@color/colorBlack"
                                            tools:ignore="SmallSp"/>
                                </LinearLayout>
                                <LinearLayout
                                        android:id="@+id/home_llCheck"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginRight="15dp"
                                        android:orientation="vertical">
                                    <ImageView
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:src="@mipmap/main_home_icon_check"/>
                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:text="业主认证"
                                            android:textSize="10sp"
                                            android:textColor="@color/colorBlack"
                                            tools:ignore="SmallSp"/>
                                </LinearLayout>
                                <LinearLayout
                                        android:id="@+id/home_llVR"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_vertical"
                                        android:layout_marginLeft="15dp"
                                        android:orientation="vertical">
                                    <ImageView
                                            android:layout_width="40dp"
                                            android:layout_height="40dp"
                                            android:src="@mipmap/main_home_icon_vr"/>
                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:text="VR车位"
                                            android:textSize="9sp"
                                            android:textColor="@color/colorBlack"
                                            tools:ignore="SmallSp"/>
                                </LinearLayout>
                                <View
                                        android:layout_width="0dp"
                                        android:layout_height="match_parent"
                                        android:layout_weight="1"/>
                            </LinearLayout>
                        </LinearLayout>
                        <LinearLayout
                                android:id="@+id/home_llQuick"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="12dp"
                                android:layout_marginTop="12dp"
                                android:layout_below="@+id/home_llIcon"
                                android:background="@color/colorGrey"
                                android:orientation="horizontal">
                            <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="120dp"
                                    android:layout_weight="1"
                                    android:background="@drawable/style_home_icon_bg"
                                    android:orientation="vertical">
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginTop="8dp"
                                        android:text="我的小区"
                                        android:textStyle="bold"
                                        android:textSize="14sp"
                                        android:textColor="@color/colorBlack"/>
                                <LinearLayout
                                        android:id="@+id/home_llCert"
                                        android:visibility="visible"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="15dp"
                                        android:layout_marginRight="15dp"
                                        android:orientation="vertical">
                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_horizontal"
                                            android:layout_marginTop="22dp"
                                            android:text="还没有认证业主身份?"
                                            android:textSize="12sp"/>
                                    <Button
                                            android:layout_width="wrap_content"
                                            android:layout_height="25dp"
                                            android:layout_gravity="center_horizontal"
                                            android:background="@null"
                                            android:text="@string/goCert"
                                            android:textSize="12sp"
                                            android:textColor="@color/colorGold"/>
                                </LinearLayout>
                                <LinearLayout
                                        android:id="@+id/home_llMyCom"
                                        android:visibility="gone"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="18dp"
                                        android:layout_marginBottom="5dp"
                                        android:orientation="horizontal">
                                    <androidx.cardview.widget.CardView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center_vertical"
                                            app:cardCornerRadius="5dp"
                                            app:cardElevation="0dp">
                                        <ImageView
                                                android:layout_width="70dp"
                                                android:layout_height="70dp"
                                                android:scaleType="centerCrop"
                                                android:adjustViewBounds="true"
                                                android:src="@mipmap/community1"/>
                                    </androidx.cardview.widget.CardView>
                                    <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_marginLeft="5dp"
                                            android:layout_marginRight="5dp"
                                            android:orientation="vertical">
                                        <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="10dp"
                                                android:lineHeight="8dp"
                                                android:text="栖溪名园"
                                                android:textSize="14sp"
                                                android:textStyle="bold"
                                                android:textColor="@color/colorBlack"/>
                                        <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:lineHeight="8dp"
                                                android:text="西湖区栖溪.."
                                                android:textSize="12.5sp"
                                                android:textColor="@color/colorGold"/>
                                        <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:lineHeight="8dp"
                                                android:text="12幢"
                                                android:textSize="12sp"
                                                android:textColor="@color/colorBlack"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:layout_marginLeft="12dp"
                                    android:orientation="vertical"
                                    android:background="@drawable/style_home_vr_bg">
                                <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="8dp"
                                        android:text="@string/home_vr"
                                        android:textStyle="bold"
                                        android:textSize="14sp"
                                        android:textColor="@color/colorWhite"/>
                                <ImageView
                                        android:layout_width="70dp"
                                        android:layout_height="70dp"
                                        android:layout_gravity="center_horizontal"
                                        android:layout_marginTop="8dp"
                                        android:scaleType="fitXY"
                                        android:src="@mipmap/parking"/>
                            </LinearLayout>
                        </LinearLayout>
                        <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:layout_marginTop="12dp"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="12dp"
                                app:cardCornerRadius="5dp"
                                app:cardElevation="0dp">
                            <com.youth.banner.Banner
                                    android:id="@+id/home_Banner"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">
                            </com.youth.banner.Banner>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                            android:id="@+id/home_llList"
                            android:layout_below="@+id/home_llBody"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@color/colorGrey">
                        <LinearLayout
                                android:id="@+id/home_llTitle"
                                android:layout_width="match_parent"
                                android:layout_height="44dp">
                            <LinearLayout
                                    android:id="@+id/home_llallCom"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:orientation="vertical">
                                <TextView
                                        android:id="@+id/home_tvallCom"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:paddingVertical="2dp"
                                        android:paddingHorizontal="15dp"
                                        android:text="全部小区"
                                        android:textSize="13sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/list_tabtext_selector"/>
                                <TextView
                                        android:id="@+id/home_ivallCom"
                                        android:layout_width="20dp"
                                        android:layout_height="3dp"
                                        android:layout_gravity="center_horizontal"
                                        android:background="@color/list_home_tabbg_selector"/>
                                <View
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"/>
                            </LinearLayout>
                            <LinearLayout
                                    android:id="@+id/home_llallPark"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginBottom="8dp"
                                    android:orientation="vertical">
                                <TextView
                                        android:id="@+id/home_tvallPark"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center_horizontal"
                                        android:paddingVertical="2dp"
                                        android:paddingHorizontal="15dp"
                                        android:text="推荐车位"
                                        android:textSize="13sp"
                                        android:textStyle="bold"
                                        android:textColor="@color/list_tabtext_selector"/>
                                <TextView
                                        android:id="@+id/home_ivallPark"
                                        android:layout_width="20dp"
                                        android:layout_height="3dp"
                                        android:layout_gravity="center_horizontal"
                                        android:background="@color/list_home_tabbg_selector"/>
                                <View
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="1"/>
                            </LinearLayout>
                        </LinearLayout>
                        <androidx.viewpager2.widget.ViewPager2
                                android:id="@+id/home_viewPager"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="?android:windowBackground">
                        </androidx.viewpager2.widget.ViewPager2>
                    </LinearLayout>
                </RelativeLayout>
            </com.myapplication1.component.MyNestedScrollView>
        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</RelativeLayout>
