<mapper namespace="com.mapper.SalerMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.pojo.Saler">
        <id column="Sno" property="Sno" />
        <result column="Saccount" property="Saccount" />
